<%- if controller_name != 'sessions' %>
  <%= link_to "Pieslēgties ar esošu profilu", new_session_path(resource_name), class: 'btn btn-outline-primary mb-2' %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Izveidot jaunu lietotāju", new_registration_path(resource_name), class: 'btn btn-outline-primary mb-2' %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Aizmirsi paroli?", new_password_path(resource_name), class: 'btn btn-outline-primary mb-2' %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Neesi saņēmis apstiprinājuma instrukcijas?", new_confirmation_path(resource_name), class: 'btn btn-outline-primary mb-2' %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Neesi saņēmis atbloķēšanas instrukcijas?", new_unlock_path(resource_name), class: 'btn btn-outline-primary mb-2' %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Pieteikties ar #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post, data: { turbo: false }, class: 'btn btn-outline-primary mb-2' %><br />
  <% end %>
<% end %>
