<div class="container" style="max-width: 600px;">
  <div class="card my-4">
    <div class="card-header">
      <h2>Jauns lietotājs</h2>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'needs-validation', novalidate: true }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group">
          <%= f.label :email, "E-pasts", class: 'form-label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password, "Parole", class: 'form-label' %>
          <% if @minimum_password_length %>
            <em>(rakstzīmju minimums <%= @minimum_password_length %>)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, "Paroles apstiprinājums", class: 'form-label' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.submit "Izveidot profilu", class: 'btn btn-primary my-3' %>
        </div>
      <% end %>
    </div>
  </div>
  <%= render "devise/shared/links" %>
</div>
