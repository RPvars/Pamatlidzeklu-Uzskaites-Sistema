<div class="container" style="max-width: 600px;">
  <div class="card my-4">
    <div class="card-header">
      <h2>Aizmirsi savu paroli?</h2>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'needs-validation', novalidate: true }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group mb-3">
          <%= f.label :email, "E-pasts" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>
        <div class="actions">
          <%= f.submit "Nosūtīt atiestatīšanas instrukcijas", class: 'btn btn-primary' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
