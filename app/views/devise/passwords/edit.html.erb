<div class="container" style="max-width: 600px;">
  <div class="card my-4">
    <div class="card-header">
      <h2>Main카t savu paroli</h2>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>
        <div class="form-group">
          <%= f.label :password, "Jauna parole" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> z카mju minimums)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, "Apstiprin훮t jauno paroli" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>
        <div class="actions">
          <%= f.submit "Main카t manu paroli", class: 'btn btn-primary' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
