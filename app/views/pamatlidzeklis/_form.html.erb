      <h4 class="alert-heading"><%= pluralize(pamatlidzekli.errors.count, "error") %> prohibited this pamatlidzekli from being saved:</h4>
      <ul>
        <% pamatlidzekli.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label :nosaukums %>
    <%= form.text_field :nosaukums, class: 'form-control' %>
