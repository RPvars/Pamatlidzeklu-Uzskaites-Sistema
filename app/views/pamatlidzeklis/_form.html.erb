    <%= form.label :razotajs %>
    <%= form.text_field :razotajs, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :modelis %>
    <%= form.text_field :modelis, class: 'form-control' %>
  </div>
